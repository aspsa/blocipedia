<% if policy(@wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>

<% if policy(@wiki).destroy? %>
    <%= link_to "Delete", wiki_path(@wiki), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this wiki?" } %><br /><br />
<% end %>