<h1><%= markdown_to_html @wiki.title %></h1>
<p><%= markdown_to_html @wiki.body %></p>

<% if policy(@wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>

<% if policy(@wiki).destroy? %>
    <%= link_to "Delete", wiki_path(@wiki), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this post?" } %><br /><br />
<% end %>

<%= link_to "Wiki Home", wikis_path %>